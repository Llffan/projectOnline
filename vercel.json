{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",  
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },
    {
      "src": "^/([^/]+\\.\\w+)/?$",
      "dest": "/index.html"
    },
    {
      "src": "^/(company|company_en)/(.*)$",
      "dest": "/index.html"
    },
    {
      "src": "^/(en)/?$",
      "dest": "/index.html"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    }
  ]
}