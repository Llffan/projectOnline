{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    { 
      "src": "/assets/(.*)", 
      "dest": "/assets/$1" 
    },
    {
      "src": "/(.*)\\.(js|css|png|jpe?g|gif|svg|webp|ico|woff2?|ttf|eot)$",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}